@model  List<FacturaViewModel>

@{ 
    ViewData["Title"] = "All Invoices";
}

<h4>All Invoices</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id Factura</th>
            <th scope="col">Id Locatie</th>
            <th scope="col">Numar Factura</th>
            <th scope="col">Data Factura</th>
            <th scope="col">Nume Client</th>
            <th scope="col">Sterge</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var factura in Model)
        {
            <tr>
                <th scope="row">@factura.IdFactura</th>
                <td>@factura.IdLocatie</td>
                <td><a asp-action="EditInvoice" asp-controller="Invoice" asp-route-invoiceId="@factura.IdFactura">@factura.NumarFactura</a></td>
                <td>@factura.DataFactura.ToString("dd.MM.yyyy")</td>
                <td>@factura.NumeClient</td>
                <td><a asp-action="DeleteInvoice" asp-controller="Invoice" asp-route-invoiceId="@factura.IdFactura" class="btn btn-danger btn-sm">Sterge</a></td>
            </tr>
        }
    </tbody>
</table>

